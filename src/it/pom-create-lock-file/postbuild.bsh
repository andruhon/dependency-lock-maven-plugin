import java.io.File;

File lockFile = new File(basedir, ".dependency-lock/pom.xml");
File expectedLockFile = new File(basedir, "expected-pom.xml");

if (!lockFile.isFile()) {
  throw new Exception("Lock file missing " + lockFile);
}

if (!org.apache.commons.io.FileUtils.contentEquals(expectedLockFile, lockFile)) {
  throw new Exception("Created lock file not as expected");
}
